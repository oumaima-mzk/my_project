{% extends 'base.html.twig' %}

{% block title %}Films{% endblock %}

{% block body %}
    <h1>Films</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ film.title }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ film.Auteur }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ film.DateCreation ? film.DateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Actions</th>
                <td>{{ film.actions }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_films_index') }}">back to list</a>

    <a href="{{ path('app_films_edit', {'id': film.id}) }}">edit</a>

    {{ include('films/_delete_form.html.twig') }}
