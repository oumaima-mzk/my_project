{% extends 'base.html.twig' %}

{% block title %}Genre index{% endblock %}

{% block body %}
    <h1>Genre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.title }}</td>
                <td>
                    <a href="{{ path('app_genre_show', {'id': genre.id}) }}"><button type="button" class="btn btn-warning">Show</button></a>
                    <a href="{{ path('app_genre_edit', {'id': genre.id}) }}"><button type="button" class="btn btn-secondary">edit</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_genre_new') }}"><button type="button" class="btn btn-success">Create new</button></a>
{% endblock %}
